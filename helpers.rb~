helpers do
  def valid_date?(str, format = '%F')
#    p "valid_date"
    Date.strptime(str, format) rescue false
  end

  def valid_datetime?(str, format = '%F %R')
 #   p "valid_datetime"
    Date.strptime(str, format) rescue false
  end

  def valid_integer?(str)
    #p "valid_integer"
    str =~ /\d+/
  end

  def valid_string?(str)
    #p "valid_string"
    return !str.nil?
  end

  def check_and_set(str, default, max)
    if str.nil?
      res = default
    else
      res = str.to_i
      res = max if res > max
    end
    return res
  end

  def tomorrow
      p "helper", DateTime.now + 1
    DateTime.now + 1
  end

  def json(json)
    MultiJson.dump(json, pretty: true)
  end
end
